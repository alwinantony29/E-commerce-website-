{{!-- cake section --}}
<section>
  <div class="container mb-5 pt-5">
    <div class="row justify-content-center gap-3">

      {{#each products}}
      <div class="card col-md-3 shadow col-lg-2 col-sm-4 text-center  " style="background-color: white; width: 10rem; ;">
        <img src="/product-images/{{this._id}}.jpg" class="card-img-top rounded"
          style="mix-blend-mode: darken;height:8rem;object-fit: fill;" alt="product-image" />
        <div class="card-body p-0 pb-2">
          <h5 class="card-title ">{{this.Name}}</h5>
          <p>Price: {{this.Price}}</p>
          {{!-- <p class="card-text">Description: {{this.Description}}</p> --}}
          <button id="liveToastBtn" onclick="addToCart('{{this._id}}')" class="btn btn-warning">Add to Cart <i
              id='product-{{this._id}}' class="fa-solid fa-spinner fa-spin-pulse " hidden></i></button>
        </div>
      </div>
      {{/each}}
    </div>
  </div>
</section>
{{!-- toast --}}
<div class="toast-container position-fixed bottom-0 end-0 p-3">
  <div id="add-to-cart-success" class="toast" role="alert" aria-live="assertive" aria-atomic="true">
    <div class="toast-body d-flex justify-content-between">
      <h5>Cake added to Cart. ‚ù§</h5>
      <button type="button" class="ms-auto btn-close" data-bs-dismiss="toast" aria-label="Close"></button>
    </div>
  </div>
  <div id="add-to-cart-failure" class="toast" role="alert" aria-live="assertive" aria-atomic="true">
    <div class="toast-body d-flex justify-content-between">
      <h5>Try signing in</h5>
      <button type="button" class="ms-auto btn-close" data-bs-dismiss="toast" aria-label="Close"></button>
    </div>
  </div>
</div>