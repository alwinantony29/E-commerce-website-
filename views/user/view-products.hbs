    <section>
      <div class="container pt-5">
        <div class="row justify-content-center gap-2">
          {{#each products}}

         
           
            <div class="card col-md-3 p-0 col-6 col-sm-4 justify-content-between m-3" style="width: 14rem; height: 26rem;">
              <img
                src="/product-images/{{this._id}}.jpg"
                class="card-img-top"
                style="padding:0;max-height:13rem"
                alt="..."
              />
              <div class="card-body">
                <h5 class="card-title">{{this.Name}}</h5>
                <p>{{this.Price}}</p>
                <p class="card-text">{{this.Description}}</p>  
                <button onclick="addToCart('{{this._id}}')" class="btn btn-primary">Add to cart</button>
              </div>
            </div>
           {{/each}}        
           </div>
      </div>
    </section> 

    