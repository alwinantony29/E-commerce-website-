<section>
    <div class="container mt-5">
        <form action="" id="checkout-form">
            <div class="row">
                <div class="form-group col-md-6">
                    <h2>Enter delivery details</h2>
                    <div>
                        <label for="">Address</label>
                        <input type="text" class="form-control" id="address" name="address" placeholder="123 street">
                        <label for="">Pincode</label>
                        <input type="text" class="form-control" id="pincode" name="pincode">
                        <label for="">Mobile</label>
                        <input type="text" class="form-control" id="mobile" name="mobile">
                        <input type="text" name="userId" value="{{user._id}}" hidden>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="container mt-5 ml-5 checkout" style="border: 10px;">
                        <h5>Total amount:Rs{{total}}</h5>
                        <hr>
                        <div class="payment">
                            <p>payment method</p>
                            <label for="" class="radio-inline" >
                                <input type="radio" name="payment-method" value="COD" checked="COD">COD
                            </label><br>
                            <label for="" type="radio" name="payment-method" value="ONLINE">
                                <input type="radio" name="payment-method" value="ONLINE" checked">Online Payment</label>                           
                        </div>
                        <button type="submit" class="btn btn-primary mt-2" >Confirm Order</button>
                    </div>
                </div>
            </div>
        </form>
    </div>
</section>
<script>
   $("#checkout-form").submit((e)=>{
    e.preventDefault()
    $.ajax({
        url:'/place-order',
        method:'post',
        data:$('#checkout-form').serialize(),
        success:(response)=>{
            alert(response)
            if(response.status){
                location.href='/order-success'
            }
        }
    })
   }) 
</script>