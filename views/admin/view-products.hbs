<section>
    <div class="container mt-4">
       
        <a href="/admin/add-product" class=" btn btn-warning ml-auto" >Add products</a>
     
        <table class="table mt-5" id="admin-table">
  <thead>
    <tr>
      <th scope="col">No</th>
      <th scope="col">Title</th>
      <th scope="col">Catagory</th>
      <th scope="col">Description</th>
      <th scope="col">Image</th>
      <th scope="col" ></th>
      <th scope="col"></th>
    </tr>
  </thead>
  <tbody>
    {{#each products}}
    <tr>
      <th scope="row">{{@index}}</th>
      <td>{{this.Name}}</td>
      <td>{{this.Category}}</td>
      <td>{{this.Description}}</td>
      <td><img style="width: 100px;height:100px" src="/product-images/{{this._id}}.jpg" alt="image not found" ></td>
      <td>
        <a href="/admin/edit-product/{{this._id}}" class="btn btn-primary">Edit</a>
      </td>
      <td>
        <a href="/admin/delete-product/{{this._id}}" onclick="return confirm('are you sure you want to delete {{this.Name}}')" class="btn btn-danger" >Delete</a>
      </td>
    </tr>
   {{/each}}
  </tbody>
</table>
    </div>
</section>
<script>
   $(function () {
    $('#admin-table').DataTable();
} )
</script>